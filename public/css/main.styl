@import url(https://fonts.googleapis.com/css?family=Voltaire);
@import url(https://fonts.googleapis.com/css?family=Open+Sans);
*
	border 0
	margin 0
	padding 0
html
	height 100%
body
	font-family 'Open Sans', sans-serif
	font-size 16px
	height 100%
footer
	color #FFF
	font-size .9em
	font-weight 100
	line-height 10px
	margin 1.5em 0 0 0 
	a
		color #DDD
nav
	margin 0
	padding 0
	ul
		margin 1.5em 0 0 0
		li
			font-family 'Voltaire', sans-serif
			font-size 1.3em
			font-weight 100
			height auto
			line-height 45px
			list-style none
			a
				color #FFF
			a:hover
				color #FFF
.Card
	background rgba(0,0,0,0.7)
	height 100%
	position fixed
	text-align center
	&-logo
		margin 3em 0 0 0
.Contenedor-logo
	text-align center
.Contenedor-texto
	color grey
	font-family 'Voltaire', sans-serif
	font-size 1.5em
	font-weight 100
	line-height 35px
	margin 1em 0 0 0
	text-align center
.Page
	background-image url('../../public/images/bg-elbazar.jpg')
	background-repeat no-repeat
	background-position center
	background-size cover
	height 100%
.Pie
	margin 3em 0 0 0
	text-align center
	a
		color grey
.Redes
	height auto
	margin 2em 0 0 0
	ul
		li
			display inline-block
			padding 0 .7em 0 .7em
